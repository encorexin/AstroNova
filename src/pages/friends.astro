---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { friendLinks } from '@/config/friends';
---

<BaseLayout
  title="Friends - AstroNova"
  description="Friend links and recommended websites"
>
  <section class="container py-12">
    <div class="mx-auto max-w-4xl">
      <div class="mb-12 text-center">
        <h1 class="text-4xl font-bold tracking-tight sm:text-5xl">Friends</h1>
        <p class="mt-4 text-lg text-muted-foreground">
          Great websites and projects from our friends
        </p>
      </div>

      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
        {
          friendLinks.map((friend) => (
            <a
              href={friend.url}
              target="_blank"
              rel="noopener noreferrer"
              class="group flex flex-col rounded-lg border bg-card p-6 shadow-sm transition-all hover:border-primary/50 hover:shadow-lg"
            >
              <div class="mb-4 flex items-center gap-4">
                {friend.avatar ? (
                  <img
                    src={friend.avatar}
                    alt={friend.name}
                    class="h-12 w-12 rounded-full bg-muted object-cover p-1"
                    loading="lazy"
                  />
                ) : (
                  <div class="flex h-12 w-12 items-center justify-center rounded-full bg-primary/10 text-xl font-bold text-primary">
                    {friend.name.charAt(0)}
                  </div>
                )}
                <div>
                  <h3 class="font-semibold text-foreground transition-colors group-hover:text-primary">
                    {friend.name}
                  </h3>
                  {friend.tags && friend.tags.length > 0 && (
                    <div class="mt-1 flex flex-wrap gap-1">
                      {friend.tags.slice(0, 2).map((tag) => (
                        <span class="inline-flex items-center rounded-full bg-secondary px-2 py-0.5 text-xs text-secondary-foreground">
                          {tag}
                        </span>
                      ))}
                    </div>
                  )}
                </div>
              </div>
              <p class="line-clamp-2 flex-1 text-sm text-muted-foreground">
                {friend.description}
              </p>
              <div class="mt-4 flex items-center text-sm text-primary opacity-0 transition-opacity group-hover:opacity-100">
                <span>Visit</span>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  class="ml-1"
                >
                  <path d="M7 17L17 7" />
                  <path d="M7 7h10v10" />
                </svg>
              </div>
            </a>
          ))
        }
      </div>

      <!-- Add Friend Section -->
      <div class="mt-16 rounded-lg border bg-muted/30 p-8 text-center">
        <h2 class="mb-4 text-2xl font-bold">Want to Exchange Links?</h2>
        <p class="mx-auto mb-6 max-w-xl text-muted-foreground">
          If you'd like to add your website to our friends list, please open an
          issue or pull request on our GitHub repository with your site
          information.
        </p>
        <a
          href="https://github.com/encorexin/AstroNova/issues/new"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center justify-center rounded-md bg-primary px-6 py-3 text-sm font-medium text-primary-foreground transition-colors hover:bg-primary/90"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="currentColor"
            class="mr-2"
          >
            <path
              d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
            ></path>
          </svg>
          Submit Your Site
        </a>
      </div>

      <!-- Site Info for Exchange -->
      <div class="mt-8 rounded-lg border p-6">
        <h3 class="mb-4 font-semibold">Our Site Info</h3>
        <div class="space-y-2 text-sm">
          <div class="flex items-start gap-2">
            <span class="min-w-20 text-muted-foreground">Name:</span>
            <span class="font-mono">AstroNova</span>
          </div>
          <div class="flex items-start gap-2">
            <span class="min-w-20 text-muted-foreground">URL:</span>
            <span class="font-mono">https://nova.encorexin.online</span>
          </div>
          <div class="flex items-start gap-2">
            <span class="min-w-20 text-muted-foreground">Description:</span>
            <span>A modern technical blog built with Astro</span>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
