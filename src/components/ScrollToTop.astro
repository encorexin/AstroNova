---
// ScrollToTop.astro - 一键返回顶部按钮组件
---

<button
  id="scroll-to-top"
  class="fixed bottom-8 right-8 z-50 flex h-12 w-12 items-center justify-center rounded-full bg-primary text-primary-foreground shadow-lg transition-all duration-300 hover:scale-110 hover:shadow-xl focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:ring-offset-background opacity-0 translate-y-4 pointer-events-none"
  aria-label="返回顶部"
  title="返回顶部"
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width="24"
    height="24"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    class="h-5 w-5"
  >
    <line x1="12" y1="19" x2="12" y2="5"></line>
    <polyline points="5 12 12 5 19 12"></polyline>
  </svg>
</button>

<style>
  #scroll-to-top.show {
    opacity: 1;
    transform: translateY(0);
    pointer-events: auto;
  }
</style>

<script>
  const scrollToTopBtn = document.getElementById('scroll-to-top') as HTMLButtonElement;
  
  // 显示/隐藏按钮
  const toggleScrollButton = () => {
    if (window.scrollY > 300) {
      scrollToTopBtn.classList.add('show');
    } else {
      scrollToTopBtn.classList.remove('show');
    }
  };

  // 滚动到顶部
  const scrollToTop = () => {
    window.scrollTo({
      top: 0,
      behavior: 'smooth'
    });
  };

  // 事件监听
  window.addEventListener('scroll', toggleScrollButton);
  scrollToTopBtn.addEventListener('click', scrollToTop);

  // 清理事件监听
  document.addEventListener('astro:before-swap', () => {
    window.removeEventListener('scroll', toggleScrollButton);
    scrollToTopBtn.removeEventListener('click', scrollToTop);
  });
</script>