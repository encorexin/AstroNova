---
import { siteConfig } from '@/config/site';
import MobileNav from './MobileNav';
import SearchBox from './SearchBox.astro';
import ThemeToggle from './ThemeToggle';
---

<header
  class="sticky top-0 z-50 w-full border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60"
>
  <div class="container flex h-16 items-center justify-between">
    <a href="/" class="flex items-center space-x-2">
      <span class="text-xl font-bold">{siteConfig.title}</span>
    </a>

    <nav class="hidden items-center space-x-6 text-sm font-medium md:flex">
      {
        siteConfig.navigation.map((item: { href: string; name: string }) => (
          <a
            href={item.href}
            class="text-foreground/60 transition-colors hover:text-foreground/80"
            aria-label={item.name}
          >
            {item.name}
          </a>
        ))
      }
    </nav>

    <div class="flex items-center space-x-4">
      <div class="hidden md:block">
        <SearchBox placeholder="Search..." className="w-64" />
      </div>
      <ThemeToggle client:load />
      <MobileNav client:load />
    </div>
  </div>
</header>
